<main>
    <div class="row my-5">
        {{#with formBlock}}
            <div class='col-8'>
                <div>
                    <h1>{{header}}</h1>
                    <p>{{rating.title}}: {{rating.value}}</p>
                </div>
                {{#with actionBlock}}
                    <ul class="nav nav-tabs mb-6 d-flex justify-content-between">
                        {{#each tabs}}
                            {{#with this}}
                                <li class="nav-item col-4">
                                    <a class="nav-link text-center {{#if isActive}}fw-semibold active{{/if}}" href="#">{{text}}</a>
                                </li>
                            {{/with}}
                        {{/each}}
                    </ul>

                    <hr class="my-5">

                    {{#with report}}
                        <div class="card my-5">
                            <div class="card-body">
                                <p>{{title}}</p>
                            <a href='{{button.link}}' class="btn btn-secondary">{{button.text}}</a>
                            </div>
                        </div>
                    {{/with}}
                    <hr class="my-5">
                    {{!-- тут доверстати репорт --}}
                {{/with}}
                {{#with feedbackBlock}}
                    <h2 class="my-5">{{title}}</h2>
                    <div class="my-5 row">
                        <div class="col">
                            <div class="d-flex flex-row">
                                {{#each buttons}}
                                    {{#if isWarning}}
                                        <div>
                                            <a class='btn py-2 px-3 btn-warning text-light me-3' href='{{link}}' role='button'>{{text}}</a>
                                        </div>
                                    {{/if}}
                                    {{#if isSuccess}}
                                        <div>
                                            <a class='btn py-2 px-3 btn-success me-3' href='{{link}}' role='button'>{{text}}</a>
                                        </div>
                                    {{/if}}
                                    {{#if isDanger}}
                                        <div>
                                            <a class='btn py-2 px-3 btn-danger me-3' href='{{link}}' role='button'>{{text}}</a>
                                        </div>
                                    {{/if}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                {{/with}}
            </div>
            <div class='col-4 gy-2'>
                {{#with goodsInfo}}
                    <div class='card mb-3'>
                        <div class="card-body">
                            <img src='{{photo}}' alt='{{name}}' />
                            <div class="mt-3">
                                <h5>{{name}}</h5>
                            </div>
                        </div>
                    </div>
                    <div class='card mb-4'>
                        <div class="card-body">
                            <h5>{{price}}</h5>    
                            <p>{{value}}</p>
                            {{#each buttons}}
                                {{#if isPrimary}}
                                    <div>
                                        <a class='btn py-2 px-3 btn-primary me-3 my-2' href='{{link}}' role='button'>{{text}}</a>
                                    </div>
                                {{/if}}
                                {{#if isSecondary}}
                                    <div>
                                        <a class='btn py-2 px-3 btn-secondary me-3 my-2' href='{{link}}' role='button'>{{text}}</a>
                                    </div>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class='card'>
                        <div class="card-body">
                            {{#with seller}}
                            <div>{{title}}: <b>{{value}}</b></div>
                            {{/with}}
                        </div>
                    </div>
                {{/with}}
            </div>
        {{/with}}
    </div>
    <hr>
    <section class="my-5">
        <div class="row">
            <div class="col">
                {{>reviewItem data=reviewList}}
            </div>
        </div>
    </section>
    {{#with service}}
    {{> shopaction}}
    {{/with}}
    <hr>
</main>