<main>
    <div class="row">

        <div class="col-12 mb-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        {{#with navigation}}
                        <div class="col-7"><h1>{{Logo}}</h1></div>

                        <div class="col-5">
                            <div class="nav mt-2">
                                {{#each links}}
                                <div class="nav-item">
                                    <a href="{{href}}" class="nav-link">{{text}}</a>
                                </div>
                                {{/each}}
                                <div class="nav-item">
                                    <a href="#" class="nav-link disabled">Disabled</a>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        {{#with newsBlock}}
        <h2 class="text-center mb-3">Топ статті</h2>

        <div class="col-12 mb-5">
            <div class="row gy-3 gx-2">
                {{#each cards}}
                <div class="col-3">
                    <div class="card text-bg-secondary">
                        <div class="card-header">
                            {{title}}    
                            {{#if isNew}}<span class=" badge rounded-pill text-bg-success">Нова</span>{{/if}}
                            {{#if isTop}}<span class="badge rounded-pill text-bg-danger">Топ</span>{{/if}}
                        </div>
                        <div class="card-body">
                            {{description}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr>
        {{#with goodsBlock}}
        <div class="col-12 my-5">
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item"><a href="#" class="nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}} px-5">{{text}}</a></div>
                {{/each}}
            </div>
        </div>

        <div class="col-12 mb-5">
            <div class="row gx-2 gy-4">
                {{#each cards}}
                <div class="col-4">
                    <div class="card">
                        <img src="{{image}}" alt="">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-7">
                                    <h6>{{title}}</h6>
                                </div>
                                <div class="col-5">
                                    {{#if isHot}}<span class="text-uppercase badge rounded-pill text-bg-warning">NEW</span>{{/if}}
                                    {{#if isNew}}<span class="badge rounded-pill text-bg-primary">Top</span>{{/if}}
                                </div>
                            </div>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
        <hr>
        {{#with subscribe}}
        <div class="col-12 my-4">
            <div class="card text-bg-dark p-2">
                <div class="row">
                    <div class="col-7">
                        <h2 class="mb-2">{{header}}</h2>
                        <p class="m-0">{{description}}</p>
                    </div>
                    <div class="col-5">
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary mt-3">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
        {{#with service}}
        <hr class="my-0">
        
        <div class="my-5 card text-bg-success text-center">
            <h2 class="pt-2">{{title}}</h2>
            <p>{{description}}</p>
            <div><a href="{{buttons.link}}" class="btn btn-primary mb-2">{{buttons.text}}</a></div>
        </div>
        {{/with}}
        <hr class="my-0">
        <div class="col-10">
            <div class="row">
                {{#each footer}}
                <div class="col-2">
                    <div class="nav flex-column">
                        {{#each this}}
                        <div class="nav-item">
                            <a href="{{this.link}}" class="mb-1 text-decoration-none nav-link
                                {{#if @last}}
                                    disabled                                 
                                {{/if}}
                                ">{{this.text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>