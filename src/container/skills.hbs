<div>
    {{#with main}}
    <main>
        <section>
            {{>title data='All skills' big=true}}
            <ul>
                {{#each skills}}
                <li>
                    {{!-- {{this.name}} ({{point}}) 
                    {{#if isTop}} Top {{/if}}
                    {{#unless point includeZero=true }} (не вивчаємо){{/unless}} --}}
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (Top) {{/if}}

                    {{#unless point includeZero=true}} (Не вивчаємо) {{/unless}}

                    {{#unless point}} 
                        {{#if point includeZero=true}}
                        (Вивчаємо)
                        {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{>title data='My hobbies'}}

            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}

                    {{#if isMain}}
                        (Favourite)
                    {{/if}}
                    
                </li>

                {{/each}}
            </ol>

    </section>
    </main>

    {{/with}}

</div>
