<div class='card h-100'>
  <img src='{{img}}' class='card-img-top' alt='{{name}}' />
  <div class='card-body'>
    <div class='d-flex align-items-center'>
      {{#if isHot}}
        <span
          class='badge px-3 py-2 rounded-pill text-bg-warning text-light text-uppercase me-2'
        >hot</span>
      {{/if}}

      {{#if isNew}}
        <span
          class='badge px-3 py-2 rounded-pill text-bg-primary me-2'
        >New</span>
      {{/if}}
    </div>
    {{#if isFast}}
      <div class='my-2'>
        <span
          class='badge px-3 py-2 text-bg-success me-2'
        >Швидка доставка</span>
      </div>
    {{/if}}
    {{#if isFree}}
      <div class='my-2'>
        <span
          class='badge px-3 py-2 text-bg-secondary me-2'
        >Безкоштовна доставка</span>
      </div>
    {{/if}}
    <h5 class='card-title'>{{name}}</h5>
    <p class='card-text pt-2'>{{review.amount}}
      {{review.text}}</p>
    <h4 class='card-title'>{{price}}</h4>
    <p class='card-text pt-2'>{{delivery}}</p>
    {{#each buttons}}
      {{#with this}}
        {{#if isPrimary}}
          <div class='my-2'>
            <a
              href='{{href}}'
              class='btn btn-primary'
            >{{text}}</a>
          </div>
        {{/if}}
        {{#if isSecondary}}
          <div class='my-2'>
            <a
              href='{{href}}'
              class='btn btn-secondary'
            >{{text}}</a>
          </div>
        {{/if}}
      {{/with}}
    {{/each}}
    <ul class='mt-3'>
      {{#each characteristics}}
        {{#with this}}
          <li>{{title}}: {{value}}</li>
        {{/with}}
      {{/each}}
    </ul>
  </div>
</div>