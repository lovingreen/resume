<hr class="my-0">
<div class="col-10">
    <div class="row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav flex-column">
                {{#each this}}
                <div class="nav-item">
                    <a href="{{this.link}}" class="mb-1 text-decoration-none nav-link
                        {{#if @last}}
                            disabled                                 
                        {{/if}}
                        ">{{this.text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</div>