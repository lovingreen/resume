<div class="row">
    <div class="col-3">
        <p>{{number}}</p>
        <h6>{{status}}</h6>
    </div>
    {{#with amount}}
    <div class="col-2">
        <p>{{title}}</p>
        <h5>{{value}}</h5>
    </div>
    {{/with}}
    <div class="col-5">
        <div class="row">
            {{#each images}}
            <div class="col-3 ms-4" >
                <img src="{{this}}" style="border: 1px solid black; border-radius: 3px;">
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-2">
        {{#with button}}
        <a href="{{link}}" class="btn mt-4 btn-primary">{{text}}</a>
        {{/with}}
    </div>
</div>